{
    "name": "ai-chat-app-root",
    "private": true,
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "start:client": "npm run dev --workspace=client",
        "start:server": "npm run dev --workspace=server",
        "install:all": "npm install",
        "dev": "concurrently \"npm run start:client\" \"npm run start:server\""
    },
    "devDependencies": {
        "concurrently": "^9.2.1"
    }
}